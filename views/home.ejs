<div class="content-wrapper">

  <%- include('partials/header.ejs') %>
  <%- include('partials/navbar.ejs') %>
  
  <div class="image-bg">
      <div class="center-text">
          <h1 style="text-shadow: 2px 4px #000000;" class="text-white">Hello Welcome to My Web Blog App</h2>
          <p style="text-shadow: 2px 4px #000000;" class="text-white">Created with (NodeJS and ExpressJS)</p>
      </div>
  </div>
  
  <div class="album d-flex mt-5 justify-content-center">
    <div class="container">
        <% if (blog.length == 0){ %>
          <div class="px-4 py-2 my-5 text-center">
            <img class="d-block mx-auto mb-4" src="https://www.shutterstock.com/image-vector/man-sleeps-tired-sitting-on-600nw-2262784155.jpg" alt="" width="300" height="300">
            <div class="col-lg-6 mx-auto d-flex justify-content-center">
              <p class="lead mb-4">It looks like theres no blog, Lets Created just by clicking the "Add Post"</p>
            </div>
          </div>
        <% } else { %>
          <div class="row row-cols-1 row-cols-sm-3 row-cols-md-3 g-3 block">
            <% blog.forEach(blog => { %>
              <div class="container-content d-flex justify-content-center">
                <div class="card" style="width: 23rem;">
                    <a href="/blog-views/<%= blog.id %>" class="text-decoration-none text-black">
                        <img src="https://plus.unsplash.com/premium_photo-1684581214880-2043e5bc8b8b?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8YmxvZyUyMGJhY2tncm91bmR8ZW58MHx8MHx8fDA%3D" alt="blog image" class="bg-content">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text"><%= blog.desc.length > 150 ? blog.desc.substring(0, 150) + "..." : blog.desc %></p>
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="/edit-post/<%= blog.id %>" class="btn btn-outline-success mb-3">Edit</a>
                                <form action="/delete-post/<%= blog.id %>" method="POST">
                                    <button class="btn btn-outline-danger" type="submit">Delete</button>
                                </form>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            
            <% }); %>
        <% } %>
          </div>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>
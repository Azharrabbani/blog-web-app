<div class="content-wrapper">

  <%- include('partials/header.ejs') %>
  <%- include('partials/navbar.ejs') %>
  
  <div class="image-bg">
      <div class="center-text">
          <h1>Hello Welcome to My Web Blog App</h2>
          <p>Created with (NodeJS and ExpressJS)</p>
      </div>
  </div>
  
  <div class="album d-flex mt-5 justify-content-center">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-3 row-cols-md-3 g-3 block">
        <% blog.forEach(blog => { %>
          <div class="container-content">
              <div class="card" style="width: 23rem;">
                  <img src="https://plus.unsplash.com/premium_photo-1684581214880-2043e5bc8b8b?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8YmxvZyUyMGJhY2tncm91bmR8ZW58MHx8MHx8fDA%3D" alt="blog image" class="bg-content">
                  <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <p class="card-text"><%= blog.desc %></p>
                    <a href="#" class="btn btn-outline-success">Edit</a>
                    <a href="#" class="btn btn-outline-danger">Delete</a>
                  </div>
                </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>